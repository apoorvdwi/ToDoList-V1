<%- include('header'); -%>

<body>

  <div class="box" id="heading">

    <h1> <%= listTitle %> </h1>

  </div>

  <div class="box">

    <% for (var i = 0; i < newTasks.length; i++) { %>
    <div class="item">
      <input type="checkbox">
      <p><%= newTasks[i] %></p>
    </div>
    <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="item" placeholder="New Task" required autofocus autocomplete="off">
      <button type="submit" value= <%= listTitle %> name="list">+</button>
    </form>
  </div>

</body>

</html>
